<section>
  <div class="signin">

    <p class="login">Sign-In</p><br><br><br>
    <form method="post" , action="/login">
      <label for="email2">Email</label>
      <input type="email" id="email2" name="email2">
      <br><br><br>
      <label for="password2">Password</label>
      <input type="password" id="password" name="password2" placeholder="At least 6 characters">
      <br><br>
      Passwords must consist of at least 6 characters
      {{#each errorsArray}}<div class="loginerrors">{{this}}</div>{{/each}}
      <br><br><br><br>

  
      <a href="#">Need Helps?</a>
      <br>
      New to Amazon?<br><br>
      <input type="submit" value="Create your Amazon account">
    </form>


  </div>


</section>